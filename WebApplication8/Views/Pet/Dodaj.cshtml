@model PetToSaveVM
@{
    ViewData["Title"] = "Dodaj";
}
    <form asp-controller="Pet" asp-action="Dodaj">
        <div class="form-group">
            <label>Naziv ljubimca</label>
            <input class="form-group" asp-for="Naziv">
        </div>
        <div class="form-group">
            <label>Datum rodjenja</label>
            <input class="form-group" asp-for="DatumRodjenja">
        </div>
        <div class="form-group">
            <label>Vrsta</label>
            <select class="form-group" asp-for="vrsta" asp-items="Model._Vrste"></select>
        </div>
        <div class="form-group">
            <label>Slika</label>
            <input type="file"  class="form-group"  name="pic" accept="image/*">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>